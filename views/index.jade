extends ./layout/base.jade
block body
  div.kurenai#kurenai-cover
  iframe(frameorder="2", allowfullscreen=true).kurenai#kurenai
  h1 Hatebu.me
  div.images
    img(src="/static/img/gaiyou.jpg")
    img(src="/static/img/tatakare.jpg")
    br
    img(src="/static/img/mohican.jpg", width=200, height=200)
    img(src="/static/img/disinfection.jpg", width=200, height=200)

  div.wrapper
    div.unit#unit-slot
      div#slot-container
        div#slot-left
        div#slot-stop-left
        div#slot-center
        div#slot-stpo-center
        div#slot-right
        div#slot-stop-right
        img#slot-restart(src="/static/img/slot-restart.png")

block append style
  style(type="text/css")
    include css/base.css
    include css/youtube.css

block append scripts
  script(type="text/javascript")
    include scripts/youtube.js
    include scripts/iframe.js
    include scripts/mouse.js
    include scripts/index.js
